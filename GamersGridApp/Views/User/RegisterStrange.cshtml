@model GamersGridApp.ViewModels.RegisterViewModel

@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/AssetsAvraamRegister/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/AssetsAvraamRegister/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Gamers Grid</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <!--     Fonts and icons     -->
    <script src="https://kit.fontawesome.com/0cde2950cb.js" crossorigin="anonymous"></script>
    <!-- CSS Files -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">


    <link href="~/AssetsAvraamRegister/css/avraam2NotAll.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/AssetsAvraamRegister/css/PROFILE_GG.css">
    <link href="https://fonts.googleapis.com/css?family=Alata&display=swap" rel="stylesheet">

    <link href="~/AssetsAvraamRegister/css/gsdk-bootstrap-wizardAllagi.css" rel="stylesheet" />

</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">
            <img src="~/AssetsAvraamRegister/img/logo_small.png" alt="LOGO" style="height:36px;">
            <a class="nav-link" href="#" style="color: black;"><strong>GAMERS' GRID</strong></a>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">PROFILE <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">WALL</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        STATS
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">TOP GAMES</a>
                        <a class="dropdown-item" href="#">TOP PLAYERS</a>
                        <a class="dropdown-item" href="#">TOP CLANS</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        CLAN
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">MY CLAN</a>
                        <a class="dropdown-item" href="#">FIND A CLAN</a>
                        <a class="dropdown-item" href="#">CREATE A CLAN</a>
                </li>

            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-dark" type="submit">Search</button>
            </form>
            <a class="nav-link" href="#">
                <img src="~/AssetsAvraamRegister/img/settings.png" alt="Settings" style="height:20px;">
            </a>
        </div>
    </nav>
    <div class="image-container set-full-height"
         style="background-image: url('/AssetsAvraamRegister/img/wizard.jpg')">

        <!--   Big avraam-container   -->
        <div class="avraam-container">
            <div class="avraam-row">
                <div class="avraam-col-sm-8 avraam-col-sm-offset-2">

                    <!--      Wizard container        -->
                    <div class="wizard-container">

                        <div class="card wizard-card" data-color="blue" id="wizardProfile">
                            @using (Html.BeginForm("Register", "Account"))
                            {
                                @Html.AntiForgeryToken()
                                <!--        You can switch ' data-color="orange" '  with one of the next bright colors: "blue", "green", "orange", "red"          -->

                                <div class="wizard-header">
                                    <h3>
                                        <b>BUILD</b> YOUR PROFILE <br>
                                        <small>This information will let us know more about you.</small>
                                    </h3>
                                </div>

                                <div class="wizard-navigation">
                                    <ul>
                                        <li class="avraamli"><a href="#about" data-toggle="tab">About</a></li>
                                        <li class="avraamli"><a href="#account" data-toggle="tab">Account</a></li>
                                        <li class="avraamli"><a href="#address" data-toggle="tab">Address</a></li>
                                    </ul>

                                </div>

                                <div class="avraam-tab-content">
                                    <div class="avraam-tab-pane" id="about">
                                        <div class="avraam-row">
                                            <h4 class="info-text"> Let's start with the basic information</h4>
                                            <div class="avraam-col-sm-4 avraam-col-sm-offset-1">
                                                <div class="picture-container">
                                                    <div class="picture">
                                                        <img src="~/AssetsAvraamRegister/img/default-avatar.png" class="picture-src"
                                                             id="wizardPicturePreview" title="" />
                                                        <input type="file" id="wizard-picture">
                                                    </div>
                                                    <h6>Choose Picture</h6>
                                                </div>
                                            </div>
                                            <div class="avraam-col-sm-6">
                                                <div class="avraam-form-group">
                                                    <label>Email <small>(required)</small></label>
                                                    @Html.TextBoxFor(v => v.Email, new { @class = "avraam-form-control", required = "required" })
                                                </div>
                                            </div>
                                            <div class="avraam-col-sm-6">
                                                <div class="avraam-form-group">
                                                    <label>Password <small>(required)</small></label>
                                                    @Html.TextBoxFor(v => v.Password, new { @class = "avraam-form-control", required = "required" })
                                                </div>
                                            </div>
                                            <div class="avraam-form-group col-sm-10 avraam-col-sm-offset-1">
                                                <label>NickName <small>(required)</small></label>
                                                @Html.TextBoxFor(v => v.NickName, new { @class = "avraam-form-control", required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="avraam-tab-pane" id="account">
                                        <h4 class="info-text"> What is your Favorite Game? </h4>
                                        <div class="avraam-row">

                                            <div class="col-sm-10 avraam-col-sm-offset-1">
                                                <div class="avraam-col-sm-4">
                                                    <div class="choice" data-toggle="wizard-checkbox">
                                                        @Html.CheckBoxFor(v => v.Dota, new { @class = "avraam-form-control" })
                                                        <div class="icon">
                                                            <i class="fab fa-old-republic"></i>
                                                        </div>
                                                        <h6>Dota 2</h6>
                                                    </div>
                                                </div>
                                                <div class="avraam-col-sm-4">
                                                    <div class="choice" data-toggle="wizard-checkbox">
                                                        @Html.CheckBoxFor(v => v.Lol, new { @class = "avraam-form-control" })
                                                        <div class="icon">
                                                            <i class="fas fa-fist-raised"></i>
                                                        </div>
                                                        <h6>League Of Legends</h6>
                                                    </div>

                                                </div>
                                                <div class="avraam-col-sm-4">
                                                    <div class="choice" data-toggle="wizard-checkbox">
                                                        @Html.CheckBoxFor(v => v.Cs, new { @class = "avraam-form-control" })
                                                        <div class="icon">
                                                            <i class="fas fa-crosshairs"></i>
                                                        </div>
                                                        <h6>Counter Strike</h6>
                                                    </div>

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="avraam-tab-pane" id="address">
                                        <div class="avraam-row">
                                            <div class="avraam-col-sm-12">
                                                <h4 class="info-text"> Are you living in a nice area? </h4>
                                            </div>
                                            <div class="avraam-col-sm-5 avraam-col-sm-offset-1">
                                                <div class="avraam-form-group">
                                                    <label>City</label>
                                                    @Html.TextBoxFor(v => v.City, new { @class = "avraam-form-control", required = "required" })
                                                </div>
                                            </div>
                                            <div class="avraam-col-sm-5">
                                                <div class="avraam-form-group">
                                                    <label>Country</label><br>
                                                    <select id="Country" name="Country" class="form-control"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="wizard-footer height-wizard">
                                    <div class="pull-right-avraam">
                                        <input type='button' style='background-color:blue'
                                               class='btn btn-next btn-fill btn-warning btn-wd btn-sm' name='next'
                                               value='Next' />
                                        <input type='submit' style='background-color:blue'
                                               class='btn btn-finish btn-fill btn-warning btn-wd btn-sm' name='finish'
                                               value='Finish' />

                                    </div>

                                    <div class="pull-left-avraam">
                                        <input type='button' style='background-color:blue'
                                               class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous'
                                               value='Previous' />
                                    </div>
                                    <div class="clearfix"></div>
                                </div>

                            }
                        </div>
                    </div> <!-- wizard container -->
                </div>
            </div><!-- end avraam-row -->
        </div> <!--  big container -->



    </div>

</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<!--   Core JS Files   -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
<script src="~/AssetsAvraamRegister/js/jquery.bootstrap.wizard.js" type="text/javascript"></script>

<!--  Plugin for the Wizard -->
<script src="~/AssetsAvraamRegister/js/gsdk-bootstrap-wizard.js"></script>

<!--  More information about jquery.validate here: http://jqueryvalidation.org/	 -->
<script src="~/AssetsAvraamRegister/js/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

<script>
    console.log("hi");
    $(document).ready(function () {
        let dropdownNations = $('#Country');
        dropdownNations.empty();

        const url = 'https://restcountries.eu/rest/v2/all';

        dropdownNations.append('<option selected="true" disabled>Choose Nation</option>');
        dropdownNations.prop('selectedIndex', 0);

        // Populate DropDown
        $.getJSON(url, function (data) {
            $.each(data, function (key, entry) {
                dropdownNations.append($('<option></option>').attr('value', entry.name).text(entry.name));
            });
        });

    });
</script>

</html>
