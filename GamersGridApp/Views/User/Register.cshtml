@model GamersGridApp.Models.User
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Save", "Viewer"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Please fix the following Errors!!")
    <div class="form-group">
        @Html.LabelFor(v => v.Viewer.Name)
        @Html.TextBoxFor(v => v.Viewer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Viewer.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.Viewer.BirthDate)
        @Html.TextBoxFor(v => v.Viewer.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Viewer.BirthDate)

    </div>



    <div class="form-group">
        @Html.LabelFor(v => v.Viewer.MembershipTypeID)
        @Html.DropDownListFor(v => v.Viewer.MembershipTypeID, new SelectList(Model.MembershipTypes, "Id", "Name"), "--Select--", new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Viewer.MembershipTypeID)
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(v => v.Viewer.IsSubscribedToNews) Subscribed to News
        </label>
    </div>
    @*@Html.Hidden("Viewer.ID", (Model.Viewer != null) ? Model.Viewer.Id : 0)*@
    @Html.HiddenFor(v => v.Viewer.Id);

    <button type="submit" class="btn btn-secondary">Save</button>
}

