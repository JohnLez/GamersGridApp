@model GamersGridApp.ViewModels.UserRegisterViewModel

<h2>Register</h2>

@using (Html.BeginForm("SaveRegister", "User"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Please fix the following Errors!!")

    <div class="form-group">
        @Html.LabelFor(v => v.UserName)
        @Html.TextBoxFor(v => v.UserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.UserName)
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.Email)
        @Html.TextBoxFor(v => v.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.FirstName)
        @Html.TextBoxFor(v => v.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.FirstName)
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.LastName)
        @Html.TextBoxFor(v => v.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.LastName)
    </div>


    <button type="submit" class="btn btn-secondary">Save</button>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
